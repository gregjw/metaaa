%html
%head
	%title Meta v0.01
	= favicon_link_tag 'favicon.ico'
	= stylesheet_link_tag "application"
	= javascript_include_tag 'application'
	= stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/redmond/jquery-ui.css", "application" 
	= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js", "application" 
 
	= csrf_meta_tags
%body
	- id = request.fullpath
	- if id.include?("/users/sign_in") || id.include?("/users/sign_up")
		%nav.navbar.navbar-default
			.bar
				.container 
					.navbar-brand= link_to image_tag('barlogo.png', class: "barlogo"), "/"
					%ul.nav.navbar-nav.navbar-right
						.pull-right.new-button= button_to "Back", destroy_user_session_path, method: :delete, class: "btn btn-danger"

		= yield
	- elsif id.include?("/users/password/new") || id.include?("/users/password/edit")
		%nav.navbar.navbar-default
			.bar
				.container 
					.navbar-brand= link_to image_tag('barlogo.png', class: "barlogo"), "/"
					%ul.nav.navbar-nav.navbar-right
						.pull-right.new-button= button_to "Back", destroy_user_session_path, method: :delete, class: "btn btn-danger"
		= yield
	- elsif user_signed_in?	
		%nav.navbar.navbar-default
			.bar
				.container 
					.navbar-brand= link_to image_tag('barlogo.png', class: "barlogo"), root_path
					%ul.nav.navbar-nav.navbar-right
						%li= link_to "Automate", root_path
						%li= link_to "Schedule", '/scheduler'
						%li= link_to "Settings", edit_user_registration_path
						.pull-right.new-button= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger"
		- flash.each do
			.alert.alert-success.signed-in
				= flash[:notice]
		= yield
	- else
		.home
			.logo= link_to image_tag('logo.png', class: "logo"), root_path
			.blog= link_to "BLOG", "http://metaaa-blog.tumblr.com/"
			.login= link_to "LOG IN", new_user_session_path

			.wrap{style:'text-align:center;'}
				.header= "Tailored for productive people."
				= button_to 'Create an Account', new_user_registration_path, method: :get, class: 'create'
			:javascript
				var sliderwidth="100vw"
				var sliderheight="200px"
				var slidespeed=1
				slidebgcolor="#FFF"

				var leftrightslide=new Array()
				var finalslide=''
				leftrightslide[0]='<a href="http://metaaa.org/"><img class="task" src="http://i.imgur.com/bJ5rRxb.png" border=1></a>'
				leftrightslide[1]='<a href="http://metaaa.org/"><img class="task" src="http://i.imgur.com/UiknlYY.png" border=1></a>'
				leftrightslide[2]='<a href="http://metaaa.org/"><img class="task" src="http://i.imgur.com/3zKLQQ6.png" border=1></a>'
				leftrightslide[3]='<a href="http://metaaa.org/"><img class="task" src="http://i.imgur.com/HrG6FzO.png" border=1></a>'
				leftrightslide[4]='<a href="http://metaaa.org/"><img class="task" src="http://i.imgur.com/m1d2sDy.png" border=1></a>'

				var imagegap="&nbsp;&nbsp;&nbsp;"

				var slideshowgap=25

				var copyspeed=slidespeed
				leftrightslide='<nobr>'+leftrightslide.join(imagegap)+'</nobr>'
				var iedom=document.all||document.getElementById
				if (iedom)
				document.write('<span id="temp" style="visibility:hidden;position:absolute;top:-100px;left:-9000px">'+leftrightslide+'</span>')
				var actualwidth=''
				var cross_slide, ns_slide

				function fillup(){
				if (iedom){
				cross_slide=document.getElementById? document.getElementById("test2") : document.all.test2
				cross_slide2=document.getElementById? document.getElementById("test3") : document.all.test3
				cross_slide.innerHTML=cross_slide2.innerHTML=leftrightslide
				actualwidth=document.all? cross_slide.offsetWidth : document.getElementById("temp").offsetWidth
				cross_slide2.style.left=actualwidth+slideshowgap+"px"
				}
				else if (document.layers){
				ns_slide=document.ns_slidemenu.document.ns_slidemenu2
				ns_slide2=document.ns_slidemenu.document.ns_slidemenu3
				ns_slide.document.write(leftrightslide)
				ns_slide.document.close()
				actualwidth=ns_slide.document.width
				ns_slide2.left=actualwidth+slideshowgap
				ns_slide2.document.write(leftrightslide)
				ns_slide2.document.close()
				}
				lefttime=setInterval("slideleft()",30)
				}
				window.onload=fillup

				function slideleft(){
				if (iedom){
				if (parseInt(cross_slide.style.left)>(actualwidth*(-1)+8))
				cross_slide.style.left=parseInt(cross_slide.style.left)-copyspeed+"px"
				else
				cross_slide.style.left=parseInt(cross_slide2.style.left)+actualwidth+slideshowgap+"px"

				if (parseInt(cross_slide2.style.left)>(actualwidth*(-1)+8))
				cross_slide2.style.left=parseInt(cross_slide2.style.left)-copyspeed+"px"
				else
				cross_slide2.style.left=parseInt(cross_slide.style.left)+actualwidth+slideshowgap+"px"

				}
				else if (document.layers){
				if (ns_slide.left>(actualwidth*(-1)+8))
				ns_slide.left-=copyspeed
				else
				ns_slide.left=ns_slide2.left+actualwidth+slideshowgap

				if (ns_slide2.left>(actualwidth*(-1)+8))
				ns_slide2.left-=copyspeed
				else
				ns_slide2.left=ns_slide.left+actualwidth+slideshowgap
				}
				}


				if (iedom||document.layers){
				with (document){
				document.write('<table border="0" cellspacing="0" cellpadding="0"><td>')
				if (iedom){
				write('<div style="position:relative;margin-top:20px;width:'+sliderwidth+';height:'+sliderheight+';overflow:hidden">')
				write('<div style="position:absolute;width:'+sliderwidth+';height:'+sliderheight+';background-color:'+slidebgcolor+'" onMouseover="copyspeed=0" onMouseout="copyspeed=slidespeed">')
				write('<div id="test2" style="position:absolute;left:0px;top:0px"></div>')
				write('<div id="test3" style="position:absolute;left:-1000px;top:0px"></div>')
				write('</div></div>')
				}
				else if (document.layers){
				write('<ilayer width='+sliderwidth+' height='+sliderheight+' name="ns_slidemenu" bgColor='+slidebgcolor+'>')
				write('<layer name="ns_slidemenu2" left=0 top=0 onMouseover="copyspeed=0" onMouseout="copyspeed=slidespeed"></layer>')
				write('<layer name="ns_slidemenu3" left=0 top=0 onMouseover="copyspeed=0" onMouseout="copyspeed=slidespeed"></layer>')
				write('</ilayer>')
				}
				document.write('</td></table>')
				}
				}
			
			%p.copy Meta is your virtual personal assistant, it can automate your workflow and help you tame social media!